{
  "name": "electron-swf-player",
  "productName": "electron-swf-player",
  "version": "0.2.0",
  "description": "A simple, modern Adobe Flash .swf player built on Electron",
  "repository": "github:JoeDuncko/electron-swf-player",
  "main": "src/main.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "electron-forge start",
    "generate-icons": "electron-icon-builder --flatten --input=./icons-src/electron-swf-player-macos-icon.png --output=./",
    "make": "npm run generate-icons && electron-forge make",
    "lint": "eslint src/**/*.js && prettier --write src/**/*.js"
  },
  "keywords": [],
  "author": {
    "name": "Joe Duncko",
    "email": "JoeDuncko@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icons/icon",
        "extendInfo": "Info.plist"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "electron": "^11.4.7 ",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^7.27.0",
    "prettier": "^2.3.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "nw-flash-trust": "^0.3.0"
  }
}
